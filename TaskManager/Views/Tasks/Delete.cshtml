@model TaskManager.Models.TaskItem

<div class="container mt-5">
    <div class="card border-danger shadow">
        <div class="card-body">
            <h2 class="card-title text-danger">🗑️ Delete Task</h2>
            <p class="lead">Are you sure you want to delete this task? This action cannot be undone.</p>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3 fw-bold">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
