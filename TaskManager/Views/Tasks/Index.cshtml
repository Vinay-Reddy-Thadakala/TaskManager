@model IEnumerable<TaskManager.Models.TaskItem>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">📝 Task List</h2>
        <a class="btn btn-success" asp-controller="Tasks" asp-action="Create">
            Create New Task
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th class="text-center">Completed</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td class="text-center">
                        @if (item.IsCompleted)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">No</span>
                        }
                    </td>
                    <td class="text-center d-flex flex-nowrap">
                        <a class="btn btn-sm btn-info me-1" asp-controller="Tasks" asp-action="Details" asp-route-id="@item.Id">
                            Details
                        </a>
                        <a class="btn btn-sm btn-primary me-1" asp-controller="Tasks" asp-action="Edit" asp-route-id="@item.Id">
                            Edit
                        </a>
                        <a class="btn btn-sm btn-danger" asp-controller="Tasks" asp-action="Delete" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
